{% extends 'layouts/page.njk' %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% block content %}
  {{ govukBackLink({
    text: "Back",
    href: contactPath
  }) }}

  {{ appHeading({
    text: heading,
    caption: "Form to save the Organization information"
  }) }}

  {% call appPageBody() %}

  {{error}}
  <form method='post' action='{{postHandler}}'>
    {{ govukInput(fields.orgName) }}
    {{ govukInput(fields.address1) }}
    {{ govukInput(fields.address2) }}
    {{ govukInput(fields.address3) }}
    {{ govukInput(fields.townRCity) }}
    {{ govukInput(fields.postcode) }}

    <div class="govuk-button-group">
      {{ govukButton({
        text: "Save and continue",
        name: 'action',
        value: 'sac'
      }) }}

      {{ govukButton({
        text: "Save as draft",
        name: 'action',
        value: 'sad',
        classes: "govuk-button--secondary"
      }) }}
    </div>
  </form>
  {% endcall %}

{% endblock %}